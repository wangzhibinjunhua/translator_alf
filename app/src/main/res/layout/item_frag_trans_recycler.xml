<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_frag_trans_relative_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_translate_item"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <View
            android:id="@+id/view1"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_frag_trans_txt_from"
            android:layout_alignTop="@+id/item_frag_trans_txt_from"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_line" />

        <TextView
            android:id="@+id/item_frag_trans_txt_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view1"
            android:text="你好"
            android:textColor="@android:color/white"
            android:textSize="22sp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/item_frag_trans_relative_content_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_translate_item"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <View
            android:id="@+id/view2"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_frag_trans_txt_to"
            android:layout_alignTop="@+id/item_frag_trans_txt_to"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_line" />

        <TextView

            android:id="@+id/item_frag_trans_txt_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view2"
            android:layout_marginRight="28dp"
            android:text="hello"
            android:textColor="@android:color/white"
            android:textSize="22sp" />


        <ImageView
            android:id="@+id/img_play_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/item_frag_trans_txt_to"
            android:src="@drawable/ic_ty_voice" />

    </RelativeLayout>

</LinearLayout>
