<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    n1:orientation="vertical" 
    n1:layout_width="fill_parent" 
    n1:layout_height="fill_parent"
    xmlns:n1="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        n1:layout_gravity="left" 
        n1:orientation="horizontal" 
        n1:id="@+id/language_setting_close" 
        n1:layout_width="fill_parent" 
        n1:layout_height="wrap_content">
        <ImageView 
            n1:layout_gravity="center" 
            n1:layout_width="24.0px" 
            n1:layout_height="24.0px" 
            n1:layout_marginLeft="10.0px" 
            n1:layout_marginTop="3.0px" 
            n1:layout_marginRight="8.0px" 
            n1:src="@drawable/ic_back" 
            n1:scaleType="fitStart" />
        <TextView 
            n1:textSize="25.0sp" 
            n1:textColor="#ffffffff" 
            n1:gravity="left" 
            n1:layout_width="wrap_content" 
            n1:layout_height="wrap_content" 
            n1:layout_marginTop="4.0px" 
            n1:text="@string/language_setting" 
            n1:layout_weight="1.0" />
    </LinearLayout>
    <ListView 
        n1:id="@+id/language_listview" 
        n1:layout_width="fill_parent" 
        n1:layout_height="wrap_content" 
        n1:layout_marginTop="20.0px" 
        n1:divider="@null" 
        n1:dividerHeight="8.0px" />
</LinearLayout>